<h1>My Tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <% if task.completed == true  %>
        <%= link_to task.title, show_path(task.id)  %>
        <i class="fa fa-check-square"></i>
      <% else %>
        <%= link_to task.title, show_path(task.id) %>
        <i class="fa fa-square-o"></i>
      <% end %>
    </li>
  <%end %>

</ul>

<p><%= link_to "new task",new_path %></p>


